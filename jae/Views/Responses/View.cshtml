@model jae.Models.EditResponse
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JAE HUB INTERNS FORM EDIT</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="jumbotron m-1" style="background-color: rgba(0, 0, 0, 0.8); color: white; border-radius: 20px;">
                <h2 class="text-center">JAE HUB INTERNS FORM EDIT</h2>
                <form action="View" method="post" id="form1">
                    <div class="mb-3">
                        <label for="Id" class="form-label">ID:</label>
                        <input type="text" id="Id" asp-for="Id" class="form-control" readonly>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" id="name" asp-for="Name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="course" class="form-label">Course:</label>
                        <input type="text" id="course" asp-for="Course" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="school" class="form-label">School:</label>
                        <input type="text" id="school" asp-for="School" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="number" class="form-label">Number:</label>
                        <input type="tel" id="number" asp-for="Number" class="form-control"  placeholder="09123456789">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Are you willing to work from home?</label>
                        <select id="wfhft" asp-for="wfhft" class="form-select" required>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="datestart" class="form-label">Date Start:</label>
                        <input type="date" id="datestart" asp-for="Datestart" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="renderhrs" class="form-label">Render Hours Needed:</label>
                        <input type="number" min="1" id="renderhrs" asp-for="Renderhrs" step="1" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" asp-for="Email" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address:</label>
                        <textarea id="address" asp-for="Address" class="form-control" rows="4" cols="50"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="resume" class="form-label">Resume:</label>
                        <input type="file" id="resume" asp-for="Resume" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <input type="text" id="Status" asp-for="Status" class="form-control">
                    </div>

                    <div class="text-center">
                        <button type="submit" value="Submit" class="btn btn-primary">Update</button>
                        <button type="submit" value="Submit" class="btn btn-danger" asp-controller="Responses" asp-action="Delete">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>


</body>
</html>