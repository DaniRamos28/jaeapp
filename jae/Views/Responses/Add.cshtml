@model jae.Models.addIntern
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JAE HUB INTERNS FORM</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="jumbotron m-1" style="background-color: rgba(0, 0, 0, 0.8); color: white; border-radius: 20px;">
                    <h4 class="text-center">JAE HUB INTERNS FORM</h4>
                    <form action="Add" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="nameIcon">
                                        <i class="fas fa-user"></i> <!-- This is the user icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="text" id="name" asp-for="Name" class="form-control" aria-describedby="nameIcon" required>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="course" class="form-label">Course:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="courseIcon">
                                        <i class="fas fa-book"></i> <!-- This is the book icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="text" id="course" asp-for="Course" class="form-control" aria-describedby="courseIcon" required>
                            </div>
                            <span asp-validation-for="Course" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="school" class="form-label">School:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="schoolIcon">
                                        <i class="fas fa-university"></i> <!-- This is the university icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="text" id="school" asp-for="School" class="form-control" aria-describedby="schoolIcon" required>
                            </div>
                            <span asp-validation-for="School" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="number" class="form-label">Phone Number:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="numberIcon">
                                        <i class="fas fa-phone-alt"></i> <!-- This is the phone icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="tel"
                                       id="number"
                                       asp-for="Number"
                                       class="form-control"
                                       aria-describedby="numberIcon"
                                       pattern="^[0-9]{1,11}$"
                                       maxlength="11"
                                       placeholder="09123456789"
                                       required
                                       oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                            </div>
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="wfhft" class="form-label">Are you willing to work from home?</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="wfhftIcon">
                                        <i class="fas fa-home"></i> <!-- This is the home icon from Font Awesome -->
                                    </span>
                                </div>
                                <select id="wfhft" asp-for="wfhft" class="form-control" required aria-describedby="wfhftValidation">
                                    <option disabled selected value="">-- Select an option --</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                            <span id="wfhftValidation" asp-validation-for="wfhft" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="datestart" class="form-label">Date Start:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="datestartIcon">
                                        <i class="fas fa-calendar-alt"></i> <!-- This is the calendar icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="date"
                                       id="datestart"
                                       asp-for="Datestart"
                                       class="form-control"
                                       aria-describedby="datestartIcon"
                                       required
                                       placeholder="YYYY-MM-DD">
                            </div>
                            <span id="datestartValidation" asp-validation-for="Datestart" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="renderhrs" class="form-label">Render Hours Needed:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="renderhrsIcon">
                                        <i class="fas fa-clock"></i> <!-- This is the clock icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="number"
                                       min="1"
                                       id="renderhrs"
                                       asp-for="Renderhrs"
                                       step="1"
                                       class="form-control"
                                       aria-describedby="renderhrsIcon"
                                       required>
                            </div>
                            <span asp-validation-for="Renderhrs" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Enter Your Email Address:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="emailIcon">
                                        <i class="fas fa-envelope"></i> <!-- This is the envelope icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="email"
                                       id="email"
                                       asp-for="Email"
                                       class="form-control"
                                       aria-describedby="emailIcon"
                                       required
                                       placeholder="example@example.com"
                                       autocomplete="email">
                            </div>
                            <span id="emailValidation" asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address:</label>
                            <textarea id="address" asp-for="Address" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="resume" class="form-label">Resume:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="resumeIcon">
                                        <i class="fas fa-paperclip"></i> <!-- This is the paperclip icon from Font Awesome -->
                                        <!-- Alternatively, use <i class="fas fa-file"></i> for a file icon -->
                                    </span>
                                </div>
                                <input type="text"
                                       id="resume"
                                       asp-for="Resume"
                                       class="form-control"
                                       aria-describedby="resumeIcon"
                                       placeholder="Input link of your resume">
                            </div>
                            <span asp-validation-for="Resume" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Status" class="form-label">Status:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="statusIcon">
                                        <i class="fas fa-info-circle"></i> <!-- This is the info-circle icon from Font Awesome -->
                                    </span>
                                </div>
                                <input type="text"
                                       id="Status"
                                       asp-for="Status"
                                       class="form-control"
                                       aria-describedby="statusIcon">
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>