@model jae.Models.addIntern
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JAE HUB INTERNS FORM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="jumbotron m-1" style="background-color: rgba(0, 0, 0, 0.8); color: white; border-radius: 20px;">
                <h4 class="text-center">JAE HUB INTERNS FORM</h4>
                <form action="Add" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" id="name" asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="course" class="form-label">Course:</label>
                        <input type="text" id="course" asp-for="Course" class="form-control" required>
                        <span asp-validation-for="Course" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="school" class="form-label">School:</label>
                        <input type="text" id="school" asp-for="School" class="form-control" required>
                        <span asp-validation-for="School" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="number" class="form-label">Number:</label>
                        <input type="tel" id="number" asp-for="Number" class="form-control" pattern="[0-9]{11}" placeholder="09123456789" required>
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Are you willing to work from home?</label>
                        <select id="wfhft" asp-for="wfhft" class="form-select" required>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="datestart" class="form-label">Date Start:</label>
                        <input type="date" id="datestart" asp-for="Datestart" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="renderhrs" class="form-label">Render Hours Needed:</label>
                        <input type="number" min="1" id="renderhrs" asp-for="Renderhrs" step="1" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" asp-for="Email" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address:</label>
                        <textarea id="address" asp-for="Address" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="resume" class="form-label">Resume:</label>
                        <input type="text" id="resume" asp-for="Resume" class="form-control" placeholder="Input link of your resume">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
<script>
    // Your jQuery code here
</script>

</body>
</html>
