@{
    ViewData["Title"] = "Home Page";
}

<style>
    .btn-gs {
        border-radius: 30px;
        border: 2px solid white;
        color: black;
        padding: 15px 32px;
        cursor: pointer;
        transition: all .5s ease-in-out;
        box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
    }

        .btn-gs:hover {
            background-color: white;
            color: green;
            transform: translateY(-2px);
        }

    .dark-card {
        padding: 50px 30px;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        color: white;
    }

        .dark-card h5 {
            font-size: 1.8rem;
            margin-top: 20px;
            margin-bottom: 20px;
        }

    .jae-link {
        color: lightgreen;
        cursor: pointer;
        transition: all .3s ease-in-out;
    }

        .jae-link:hover {
            text-decoration: underline;
            color: #FFFFFF;
        }

    .custom-container {
        width: 95%;
        max-width: 1400px; /* Added max-width to ensure content doesn't stretch too much on large screens */
        margin: 0 auto;
    }
</style>

<div class="custom-container mt-5">
    <div class="row">
        <!--CARD-->
        <div class="col-xl-12 main">
            <div class="text-center py-4">
                <div class="card-body dark-card">
                    <button class="btn btn-gs" onclick="location.href='Responses/Add'">Get Started</button>
                    <h5>
                        JAE Hub is composed of passionate young Professionals that share the same dream of working towards their main goal of helping people learn and grow with technology to succeed in their different lines of business.
                    </h5>
                    <p>
                        For more info visit the official website of JAE Hub. <br>
                        <a href="https://jaehubservices.com" class="jae-link">Click here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
