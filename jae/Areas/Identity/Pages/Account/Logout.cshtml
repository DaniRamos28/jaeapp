@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<!-- Define the card-based "modal" -->
<div class="card" style="max-width: 500px; margin: 0 auto;">
    <div class="card-header">
        <h5 class="card-title">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Identity/Account/Login", new { area = "" })" method="post">
                            <p class="card-text">Are you sure you want to log out?</p>
                            <button type="submit" class="btn btn-danger">Logout</button>
                            <a href="/Responses/Index" class="btn btn-secondary">Cancel Logout</a>
                        </form>
            }
            else
            {
                        <p class="card-text">You have successfully logged out of the application.</p>
                        <a href="/Index" class="btn btn-primary">Go to Index</a>
            }
        }
    </div>
</div>
